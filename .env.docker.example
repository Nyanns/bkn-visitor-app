# Database Configuration
POSTGRES_USER=bkn_admin
POSTGRES_PASSWORD=your_secure_password_here_change_me
POSTGRES_DB=bkn_visitor

# Backend Security
# Generate dengan: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_super_secret_key_minimum_32_characters

# CORS (Sesuaikan dengan domain production)
ALLOWED_ORIGINS=http://localhost:5173,https://your-production-domain.com
